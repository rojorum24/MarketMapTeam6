<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="Black"
    BackgroundImageSource="Splash.png"
    x:Class="MarketMapTeam6.Views.MarketMapMain">
    <ContentPage.Content>
        
        <StackLayout>


            <Label HeightRequest="350" />

            <Button Text="Tap Here to Continue" BackgroundColor="Transparent" HeightRequest="250" HorizontalOptions="CenterAndExpand" TextColor="White" FontSize="Large"
                    Clicked="Button_Clicked"/>
            
            <!--Uncomment the below button to enable DB interaction from main page-->
            <!--Button x:Name="DBentry" Text="Database Entry Form" Clicked="Button_Clicked_DBentry"/-->
            <Label Text="Version 0.0.1" HorizontalOptions="EndAndExpand" VerticalOptions="EndAndExpand" TextColor="White" />

        </StackLayout>
        

    </ContentPage.Content>
</ContentPage>