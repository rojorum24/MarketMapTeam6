<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MarketMapTeam6.Views.ShoppingListPage"
             BackgroundColor="#fffffF">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Label Text="Shopping List"
                           FontAttributes="Bold"
                           FontSize="Large"
                           TextColor="Black"/>
                <Label Text="Dariy"
                           FontAttributes="Bold"
                           FontSize="Medium"
                           TextColor="Black"/>
                <CollectionView x:Name="collectionDairy" 
                    SelectionMode="Multiple"
                    SelectionChanged="OnDairySelectionChanged"
                    HeightRequest="230">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="2"
                                    Text="{Binding Name}"
                                    FontAttributes="Bold"/>
                                <Label Grid.Column="2"
                                    Grid.Row="1"
                                    Text="{Binding Selected}"/>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <Label Text="Produce"
                    FontAttributes="Bold"
                    FontSize="Medium"
                    TextColor="Black"/>
                <CollectionView x:Name="collectionProduce" 
                                SelectionChanged="OnProduceSelectionChanged"
                                HeightRequest="600"
                                SelectionMode="Multiple">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="2"
                                           Text="{Binding Name}"
                                           FontAttributes="Bold"/>
                                <Label Grid.Column="2"
                                           Grid.Row="1"
                                           Text="{Binding Selected}"/>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <Label Text="Frozen Food"
                           FontAttributes="Bold"
                           FontSize="Medium"
                           TextColor="Black"/>
                <CollectionView x:Name="collectionFrozen"
                                SelectionChanged="OnFrozenSelectionChanged"
                                HeightRequest="280"
                                SelectionMode="Multiple">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="2"
                                           Text="{Binding Name}"
                                           FontAttributes="Bold"/>
                                <Label Grid.Column="2"
                                           Grid.Row="1"
                                           Text="{Binding Selected}"/>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <Label Text="Bread/Baked Goods"
                           FontAttributes="Bold"
                           FontSize="Medium"
                           TextColor="Black"/>
                <CollectionView x:Name="collectionBaked"
                                SelectionChanged="OnBakedSelectionChanged"
                                HeightRequest="280"
                                SelectionMode="Multiple">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="2"
                                           Text="{Binding Name}"
                                           FontAttributes="Bold"/>
                                <Label Grid.Column="2"
                                           Grid.Row="1"
                                           Text="{Binding Selected}"/>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <Label Text="Pantry"
                           FontAttributes="Bold"
                           FontSize="Medium"
                           TextColor="Black"/>
                <CollectionView x:Name="collectionPantry"
                                SelectionChanged="OnPantrySelectionChanged"
                                HeightRequest="410"
                                SelectionMode="Multiple">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="2"
                                           Text="{Binding Name}"
                                           FontAttributes="Bold"/>
                                <Label Grid.Column="2"
                                           Grid.Row="1"
                                           Text="{Binding Selected}"/>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <Label Text="Non-Food"
                           FontAttributes="Bold"
                           FontSize="Medium"
                           TextColor="Black"/>
                <CollectionView x:Name="collectionNonfood"
                                SelectionChanged="OnNonfoodSelectionChanged"
                                HeightRequest="280"
                                SelectionMode="Multiple">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="2"
                                           Text="{Binding Name}"
                                           FontAttributes="Bold"/>
                                <Label Grid.Column="2"
                                           Grid.Row="1"
                                           Text="{Binding Selected}"/>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <Label Text="Meat"
                           FontAttributes="Bold"
                           FontSize="Medium"
                           TextColor="Black"/>
                <CollectionView x:Name="collectionMeat"
                    SelectionChanged="OnMeatSelectionChanged"
                    HeightRequest="400"
                    SelectionMode="Multiple">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="2"
                            Text="{Binding Name}"
                            FontAttributes="Bold"/>
                        <Label Grid.Column="2"
                            Grid.Row="1"
                            Text="{Binding Selected}"/>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <Button Text="selected" Clicked="ShowSelectedItemsButton_Clicked"/>
                <Button Text="Submit>>" Clicked="Button_Clicked"/>
            </StackLayout>
        </ScrollView>
        
    </ContentPage.Content>
</ContentPage>